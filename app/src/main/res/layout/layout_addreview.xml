<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/outer_margin"
    tools:context=".presentation.AddReviewActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addReviewTextField"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addReviewRatingBar"
        android:layout_alignParentEnd="true"
        android:hint="Enter Review"
        android:paddingBottom="@dimen/inner_margin"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addReviewRatingBar"
        android:layout_above="@+id/submitReviewButton"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/inner_margin"
        android:stepSize="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitReviewButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="addReview" />
</RelativeLayout>
